generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Class {
  id                Int     @id @default(autoincrement())
  userId            Int     @map("user_id")
  classDescription String? @db.VarChar(100) @map("class_description")
  className        String  @db.VarChar(100) @map("class_name")
  User              User    @relation(fields: [userId], references: [id])
  File              File[]
}

model File {
  id        Int         @id @default(autoincrement())
  classId   Int
  filename  String
  Class     Class       @relation(fields: [classId], references: [id])
  Flashcard Flashcard[]
}

model Flashcard {
  id          Int        @id @default(autoincrement())
  question    String
  answer      String
  fileId      Int
  isAnswered Boolean    @default(false) @map("is_answered")
  difficulty  Difficulty @default(EASY)
  File        File       @relation(fields: [fileId], references: [id])
}

model User {
  id              Int      @id @default(autoincrement())
  fullName      String   @db.VarChar(100) @map("full_name")
  userName        String   @unique @db.VarChar(100) @map("user_name")
  password        String   @db.VarChar(255) @map("hashed_password")
  email           String   @unique
  xp              Int      @default(0)
  createdAt      DateTime @default(now()) @map("created_at")
  isDeleted     Boolean  @default(false) @map("is_deleted")
  isActive       Boolean  @default(true) @map("is_active")
  updatedAt      DateTime @updatedAt @map("updated_at")
  rank            Rank     @default(NOVICE)
  Class           Class[]
}

enum Difficulty {
  EASY
  MEDIUM
  ADVANCE
}

enum Rank {
  NOVICE
  SCHOLAR
  GRANDMASTER
}